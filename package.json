{
  "name": "bookmarks-plugin",
	"displayName": "bookmarks-plugin",
	"description": "Bookmark plugin with grouping support",
	"version": "0.0.1",
	"publisher": "silentsvv",
	"icon": "resources/bookmark.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/silentsvv/book_mark_plugin"
	},
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "bookmark-plugin.toggleBookmark",
				"title": "bookmark-plugin: toggle bookmark"
			},
			{
				"command": "bookmark-plugin.toggleLabeledBookmark",
				"title": "bookmark-plugin: toggle label bookmark"
			},
			{
				"command": "bookmark-plugin.addGroup",
				"title": "bookmark-plugin: add group"
			},
			{
				"command": "bookmark-plugin.clearData",
				"title": "bookmark-plugin: clear data"
			},
			{
				"command": "bookmark-plugin.activateGroup",
				"title": "Activate bookmark group",
				"icon": "$(eye)"
			},
			{
				"command": "bookmark-plugin.addSubGroup",
				"title": "add sub group",
				"icon": "$(add)"
			},
			{
				"command": "bookmark-plugin.deleteGroup",
				"title": "Delete bookmark group",
				"icon": "$(close)"
			},
			{
				"command": "bookmark-plugin.jumpToBookmark",
				"title": "Jump to book mark"
			},
			{
				"command": "bookmark-plugin.editBookmarkName",
				"title": "edit bookmark name",
				"icon": "$(edit)"
			},
			{
				"command": "bookmark-plugin.deleteBookmark",
				"title": "Delete bookmark",
				"icon": "$(close)"
			}
		],
		"viewsContainers": {
			"activitybar": [{
				"id": "bookmarks_X",
				"title": "Bookmarks X",
				"icon": "$(bookmark)"
			}]
		},
		"views": {
			"bookmarks_X": [{
					"id": "bookmarksByFile",
					"name": "By File",
					"icon": "$(bookmark)"
				},
				{
					"id": "bookmarksByGroup",
					"name": "By Group",
					"icon": "$(bookmark)"
				}
			]
		},
		"menus": {
			"view/item/context": [
			  {
				"command": "bookmark-plugin.activateGroup",
				"when": "view == bookmarksByGroup && viewItem == group",
				"group": "inline"
			  },
			  {
				"command": "bookmark-plugin.addSubGroup",
				"when": "view == bookmarksByGroup && viewItem == group",
				"group": "inline"
			  },
			  {
				"command": "bookmark-plugin.deleteGroup",
				"when": "view == bookmarksByGroup && viewItem == group",
				"group": "inline"
			  },
				{
				"command": "bookmark-plugin.editBookmarkName",
				"when": "viewItem == bookmark",
				"group": "inline"
				},
			  {
				"command": "bookmark-plugin.deleteBookmark",
				"when": "viewItem == bookmark",
				"group": "inline"
			  }
			],
			"commandPalette": [
				{
					"command": "bookmark-plugin.jumpToBookmark",
					"when": "false"
				},
				{
					"command": "bookmark-plugin.activateGroup",
					"when": "false"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.73.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
